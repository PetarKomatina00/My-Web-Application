@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link tekst-header" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Zdravo @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link tekst-header">Izloguj se</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link tekst-header" id="register" asp-area="Identity" asp-page="/Account/Register">Registracija</a>
    </li>
    <li class="nav-item">
        <a class="nav-link tekst-header" id="login" asp-area="Identity" asp-page="/Account/Login">Logovanje</a>
    </li>
}
</ul>
