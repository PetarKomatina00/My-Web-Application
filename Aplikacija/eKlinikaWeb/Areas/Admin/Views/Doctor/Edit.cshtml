@model Doctor

<form method = "post" asp-action = "Edit">
    <input asp-for = "DoctorID" hidden/>
    <div class = "border p-3 mt-4">
        <div class = "row pb-3">
            <div class = "text-primary">
                <h2 class = "text-primary">
                    Izmeni Doktora
                </h2>
            </div>
        </div>
        <div class = "mb-3">
            <label asp-for = "Ime"></label>
            <input asp-for = "Ime" class = "form-control"/>
        </div>
        <div class = "mb-3">
            <label asp-for = "Prezime"></label>
            <input asp-for = "Prezime" class = "form-control"/>
        </div>
        <div class = "mb-3">
            <label asp-for = "GodineIskustva"></label>
            <input asp-for = "GodineIskustva" class = "form-control"/>
            <span asp-validation-for = "GodineIskustva" class = "text-danger"></span>
        </div>
        <div class = "mb-3">
            <label asp-for = "Ocena"></label>
            <input asp-for = "Ocena" class = "form-control"/>
        </div>
        <div class = "mb-3">
            <label asp-for = "Email"></label>
            <input asp-for = "Email" class = "form-control"/>
        </div>
         <div class = "mb-3">
            <label asp-for = "Password"></label>
            <input asp-for = "Password" class = "form-control"/>
        </div>
        <button type = "submit" class = "btn btn-primary width:150px">
            Izmeni
        </button>
        <a asp-controller = "Doctor" asp-action = "Index" class = "btn btn-secondary">
            Vrati se
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name = "_ValidationScriptsPartial"></partial>
    }
}