@model Vreme
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Napravi novi termin</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label>Termin</label>
			<input asp-for="VremeTimeSpan" class="form-control" />
			<span asp-validation-for="VremeTimeSpan" class="text-danger"></span>
		</div>
			<button type="submit" class="btn btn-primary" style="width:150px">Kreiraj</button>
		<a asp-controller="Vreme" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Nazad na listu
		</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
