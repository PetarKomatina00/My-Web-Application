@using eKlinika.Utility
@model IEnumerable<Vreme>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista termina</h2>
		</div>
        <div id = "dugme" class="col-6 text-end">
            <a asp-controller="Vreme" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Napravi novi termin
			</a>
            @if (User.IsInRole(SD.Admin))
            {
                <a asp-controller="Vreme" asp-action="ObrisiSve" class="btn btn-danger">
               <i class="bi bi-plus-circle"></i> &nbsp; Obrisi sve termine
			    </a>
            }
		</div>
        <div class = "col-6 text-end">

        </div>
	</div>
    <br /><br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Termin
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.VremeTimeSpan.ToString()
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Vreme" asp-action="Edit" asp-route-id="@obj.VremeID"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Izmeni</a>
                        <a asp-controller="Vreme" asp-action="Delete" asp-route-id="@obj.VremeID"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>
</table>
</div>