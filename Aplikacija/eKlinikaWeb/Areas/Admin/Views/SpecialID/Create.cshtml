@model IDSpecial

<form method = "post" asp-action = "Create">
    <div class = "border p-3 mt-4">
        <div class = "row pb-3">
            <div class = "text-primary">
                <h2 class = "text-primary">
                    Napravi ID
                </h2>
            </div>
        </div>
        <div asp-validation-summary = "All"></div>
        <div class = "mb-3">
            <label asp-for = "SpecialIDNum"></label>
            <input asp-for = "SpecialIDNum" class = "form-control"/>
            <span asp-validation-for = "SpecialIDNum" class = "text-danger"></span>
        </div>
        <button type = "submit" class = "btn btn-primary width:150px">
            Napravi
        </button>
        <a asp-controller = "SpecialID" asp-action = "Index" class = "btn btn-secondary">
            Vrati se
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name = "_ValidationScriptsPartial"></partial>
    }
}