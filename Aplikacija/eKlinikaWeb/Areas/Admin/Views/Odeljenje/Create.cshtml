@model Odeljenje
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Napravi Odeljenje</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="NazivOdeljenja"></label>
			<input asp-for="NazivOdeljenja" class="form-control" />
			<span asp-validation-for="NazivOdeljenja" class="text-danger"></span>
		</div>
			<button type="submit" class="btn btn-primary" style="width:150px">Kreiraj</button>
		<a asp-controller="Odeljenje" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Nazad na listu
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
