@model eKlinika.Models.ViewModels.NarudzbinaVM
@using eKlinika.Utility
<form method="post">
    <input asp-for="Narudzbina.ID" hidden />
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Admin))
                                    {
                                        @if(Model.Narudzbina.statusIsporuke == SD.StatusApproved)
                                        {
                                            <input asp-for="Narudzbina.Ime" type="text" class="form-control" />
                                            <span asp-validation-for="Narudzbina.Ime" class="text-danger"></span>
                                        }
                                        else
                                        {
                                            <input disabled asp-for="Narudzbina.Ime" type="text" class="form-control" />
                                        }
                                    }
                                    else
                                    {
                                        <input asp-for="Narudzbina.Ime" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Admin))
                                    {
                                        @if (Model.Narudzbina.statusIsporuke == SD.StatusApproved)
                                        {
                                            <input asp-for="Narudzbina.BrojTelefona" type="text" class="form-control" />
                                            <span asp-validation-for="Narudzbina.BrojTelefona" class="text-danger"></span>
                                        }
                                        else
                                        {
                                            <input disabled asp-for="Narudzbina.BrojTelefona" type="text" class="form-control" />
                                        }
                                    }
                                    else
                                    {
                                        <input asp-for="Narudzbina.BrojTelefona" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Admin))
                                    {
                                        @if (Model.Narudzbina.statusIsporuke == SD.StatusApproved)
                                        {
                                            <input asp-for="Narudzbina.Adresa" type="text" class="form-control" />
                                            <span asp-validation-for="Narudzbina.Adresa" class="text-danger"></span>
                                        }
                                        else{
                                            <input disabled asp-for="Narudzbina.Adresa" type="text" class="form-control" />
                                        }
                                    }
                                    else
                                    {
                                        <input asp-for="Narudzbina.Adresa" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Admin))
                                    {
                                        @if (Model.Narudzbina.statusIsporuke == SD.StatusApproved)
                                        {
                                            <input asp-for="Narudzbina.Grad" type="text" class="form-control" />
                                            <span asp-validation-for="Narudzbina.Grad" class="text-danger"></span>
                                        }
                                        else
                                        {
                                            <input disabled asp-for="Narudzbina.Grad" type="text" class="form-control" />
                                        }
                                    }
                                    else
                                    {
                                        <input asp-for="Narudzbina.Grad" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Admin))
                                    {
                                        <input asp-for="Narudzbina.PostanskiBroj" readonly type="text" class="form-control" />
                                        <span asp-validation-for="Narudzbina.PostanskiBroj" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="Narudzbina.PostanskiBroj" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input asp-for="Narudzbina.ApplicationUser" readonly type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input value="@Model.Narudzbina.DatumNarucivanja.ToShortDateString()" asp-for="Narudzbina.Adresa" readonly type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Admin))
                                    {
                                        <input asp-for="Narudzbina.Dostavljac" id="dostavljac" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Narudzbina.Dostavljac" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            @*							<div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                @if(User.IsInRole(SD.Admin))
                                {
                                <input asp-for = "Narudzbina." type="text" class="form-control" />
                                <span asp-validation-for = "Narudzbina.PostanskiBroj" class = "text-danger"></span>
                                }
                                else
                                {
                                <input asp-for = "Narudzbina.PostanskiBroj" readonly type="text" class="form-control" />
                                }
                                </div>
                                </div>*@
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input value="@Model.Narudzbina.DatumIsporuke.ToShortDateString()" asp-for="Narudzbina.Adresa" readonly type="text" class="form-control" />
                                </div>
                            </div>
                            @if (User.IsInRole(SD.Admin))
                            {
                                <div class="row my-1">
                                    <div class="col-3">Session ID</div>
                                    <div class="col-9">
                                        <input asp-for="Narudzbina.SessionID" readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">PaymentIntentID</div>
                                    <div class="col-9">
                                        <input asp-for="Narudzbina.PaymentIntentID" readonly type="text" class="form-control" />
                                    </div>
                                </div>
                            }
                            <div class="row my-1">
                                <div class="col-3">Payment Date</div>
                                <div class="col-9">
                                    <input asp-for="@Model.Narudzbina.DatumPlacanja" readonly class="form-control" />
                                </div>
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input asp-for="@Model.Narudzbina.statusPlacanja" readonly class="form-control" />
                                </div>
                            </div>

                            @if (User.IsInRole(SD.Admin))
                            {
                                @if (Model.Narudzbina.statusIsporuke == SD.StatusApproved)
                                {
                                    <input asp-action="UpdateOrderDetail" type="submit" class="btn btn-warning form-control my-1" value="Update Order Details" />
                                }
                                else
                                {
                                    <input disabled asp-action="UpdateOrderDetail" type="submit" class="btn btn-warning form-control my-1" value="Update Order Details" />
                                }
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.Narudzbina.statusIsporuke</label>

                            <ul class="list-group mb-3">
                                @foreach (var x in Model.DetaljiNarudzbine)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0 text-primary">@x.Lek.Ime</h6>
                                                <small class="text-muted">Cena : @x.Lek.Cena.ToString("0.00")</small><br />
                                                <small class="text-muted">Kolicina : @x.Kolicina</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@((x.Kolicina * x.Cena).ToString("0.00"))</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">Ukupno </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.Narudzbina.ukupnaSuma.ToString("0.00")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if (Model.Narudzbina.statusIsporuke == SD.StatusShipped)
                            {
                               @*<input type="submit" class="btn btn-success form-control my-1" value="Pay Now" />*@
                            }
                            @if (User.IsInRole(SD.Admin))
                            {
                                if (Model.Narudzbina.statusIsporuke == SD.StatusApproved)
                                {
                                    <input asp-action="StartProcessing" type="submit" class="btn btn-primary form-control my-1" value="Start Processing" />
                                }
                                if (Model.Narudzbina.statusIsporuke == SD.StatusInProcess)
                                {
                                    <input asp-action="ShipOrder" onclick="return ValidateInput()" type="submit" class="btn btn-primary form-control my-1" value="Ship Order" />
                                }

                                if (Model.Narudzbina.statusIsporuke != SD.StatusRefunded && Model.Narudzbina.statusIsporuke != SD.StatusCancelled)
                                {
                                    <input type="submit" asp-action="CancelOrder" class="btn btn-danger form-control my-1" value="Cancel Order" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial"></partial>

<script>
     tinymce.init({
       selector: 'textarea',
       plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
       toolbar_mode: 'floating',
    });

     function ValidateInput(){
         if(document.getElementById("dostavljac").value==""){
             Swal.fire({
               icon: 'error',
               title: 'Oops...',
               text: 'Unesite dostavljaca!',
             });
             return false;
         }
         return true;
     }
</script>
}