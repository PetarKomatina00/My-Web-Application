@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row profil-podaci">
    
    <div class="col-md-6">
        <h3>Profil</h3>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating podaci-profil">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating podaci-profil">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating podaci-profil">
                <input asp-for="Input.Ime" class="form-control" />
                <label asp-for="Input.Ime" class="form-label"></label>
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>
            <div class="form-floating podaci-profil">
                <input asp-for="Input.Prezime" class="form-control" />
                <label asp-for="Input.Prezime" class="form-label"></label>
                <span asp-validation-for="Input.Prezime" class="text-danger"></span>
            </div>
            <div class="form-floating podaci-profil">
                <select id = "select" asp-for="Input.gradID" asp-items="@Model.Input.listaGradova" class="form-select">
                        <option disabled selected>--Izaberi Grad</option>
                </select>
            </div>
            <div class="form-floating podaci-profil">
                <input asp-for="Input.PostanskiBroj" class="form-control" />
                <label asp-for="Input.PostanskiBroj" class="form-label"></label>
                <span asp-validation-for="Input.PostanskiBroj" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-50 btn btn-md btn-primary ">Save</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}