@using eKlinika.Utility
@model IEnumerable<ApplicationUser>

<div class = "row pb-3 doktori-svi">
    @foreach(var item in Model)
    {
        <div class = "col-lg-4 col-md-4 col-sm-6 col-sm-12">
            <div class = "row p-2 ">
                <div class = "col-12 p-1 " style = "min-width:290px; min-height:600px; text-align:center;">
                    <img src = "@item.ImageUrl" class = "card-img-top rounded" style="width=100%; height=100%; min-height:450px; min-width:260px; object-fit:cover;">
                    <div class = "card-body">
                        <div class = "pl-1">
                            <p class ="card-title h3 text-primary">@item.Ime @item.Prezime</p>
                        </div>
                        <div class = "pl-1">
                            <p class ="card-title h3 text-primary">Profesija: @item.Profesija</p>
                        </div>
                        @if(User.IsInRole(SD.Admin) || User.IsInRole(SD.Direktor))
                        {
                            <a class = "btn btn-danger"asp-area = "Customer" asp-controller = "Doktori" asp-action= "Obrisi" asp-route-id = "@item.Id">Obrisi</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>